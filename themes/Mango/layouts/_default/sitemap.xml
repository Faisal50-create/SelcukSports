{{- print "<?xml version=\"1.0\" encoding=\"utf-8\"?>" | safeHTML }}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

  <url>
    <loc>{{ .Site.BaseURL | absURL }}</loc>
    <lastmod>{{ now.Format "2006-01-02T15:04:05-07:00" }}</lastmod>
    <priority>1.0</priority>
    <changefreq>daily</changefreq>
  </url>

  {{ range .Site.RegularPages }}
    <url>
      <loc>{{ .Permalink | absURL }}</loc>
      {{ with .Lastmod }}
        <lastmod>{{ .Format "2006-01-02T15:04:05-07:00" }}</lastmod>
      {{ end }}
      {{ if in .File.Path "posts" }}
        <priority>0.8</priority>
      {{ else }}
        <priority>0.9</priority>
      {{ end }}
      <changefreq>weekly</changefreq>
    </url>
  {{ end }}

</urlset>
